     "longcaption": "TEST",      "creator":{  
      	"id":"billmoyers1",     	"firstname":"Bill",     	"lastname":"Moyers"         },   
          "editstatus": 6 }]]>
          </samplerequest>
</endpoint>  

</endpoints>
