{
	"version": "1.0",
	"type": "rich",
	"provider_name": "EnterMedia",
	"provider_url": "$!context.getSiteRoot()",
	"title": "$!entity.getName()",

	#set($thumb = $entity.get("primarymedia"))
	#ifnull( $thumb )
		#set($thumb = $entity.get("primaryimage"))
	#end
	#ifnotnull( $thumb )
		#set( $link = $mediaarchive.asLinkToPreview($thumb,"image3000x3000"))
		"thumbnail_url":"$!siteroot$link",
		"thumbnail_width":3000,
		"thumbnail_height":3000,
	#end
	#set($width = $context.getRequestParameter("maxwidth"))
	#ifnull($width)
		#set($width = $publishing.containerwidth)
		#if(!$width || $width <= 0)
			#set($width = 1000) 
		#end
	#end
	#set($height = $context.getRequestParameter("maxheight"))
	#ifnull($height)
		#set($height = $publishing.containerheight)
		#if(!$height || $height <= 0)
			#set($height = 824) 
		#end
	#end
	"width": $width,
	"height": $height,
	"cache_age": "60",
	"html": #jesc($output)
		
}